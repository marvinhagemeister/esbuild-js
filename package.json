{
	"name": "esbuild-js",
	"version": "0.0.1",
	"description": "",
	"main": "dist/cjs/index.js",
	"module": "dist/module/index.js",
	"types": "dist/types/index.d.ts",
	"scripts": {
		"bench": "ts-node benchmark/bench.ts",
		"bench-write": "DEBUG=true ts-node benchmark/custom-test.js",
		"build": "rimraf dist/ && tsc -p tsconfig.cjs.json && tsc -p tsconfig.module.json",
		"format": "prettier --write 'src/**/*.{js,jsx,ts,tsx}'",
		"test": "mocha -r ts-node/register --extensions ts,tsx --watch-files src/ src/**/*.test.ts"
	},
	"author": "Marvin Hagemeister <hello@marvinh.dev>",
	"license": "MIT",
	"devDependencies": {
		"@babel/generator": "^7.11.6",
		"@babel/parser": "^7.11.5",
		"@types/mocha": "^8.0.3",
		"@types/node": "^14.0.27",
		"@unicode/unicode-13.0.0": "^1.0.0",
		"acorn": "^6.4.2",
		"astring": "^1.4.3",
		"benchmarkjs-pretty": "^2.0.1",
		"esbuild": "^0.7.14",
		"escaya": "^0.0.61",
		"escaya-codegen": "^0.0.15",
		"expect": "^26.5.2",
		"husky": "^4.2.5",
		"lint-staged": "^10.2.11",
		"mocha": "^8.1.3",
		"prettier": "^2.0.5",
		"rimraf": "^3.0.2",
		"ts-node": "^8.10.2",
		"typescript": "^3.9.7"
	},
	"dependencies": {
		"@types/estree": "^0.0.45"
	},
	"prettier": {
		"useTabs": true,
		"arrowParens": "avoid"
	},
	"lint-staged": {
		"**/*.{js,jsx,ts,tsx,json}": [
			"prettier --write"
		]
	},
	"husky": {
		"hooks": {
			"pre-commit": "lint-staged"
		}
	}
}
